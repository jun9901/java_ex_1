package ch01;

import java.io.IOException;

public class SystemInTest2 {

	public static void main(String[] args) {
		System.out.println("알파벳 하나를 쓰고 [Enter]를 누르세요.");
		boolean i;
		try {
			while(i = System.in.read() != '\n') {
				// 화면에 출력
				System.out.print(i);
			}
			
		} catch( IOException e) {
			
		}

		
	}

}
