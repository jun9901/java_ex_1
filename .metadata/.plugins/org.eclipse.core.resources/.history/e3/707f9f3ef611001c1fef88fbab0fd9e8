package ch05;

import java.util.ArrayList;
import java.util.Scanner;

public class InputPhoneNumber {

	ArrayList<String> userName = new ArrayList<>();
	ArrayList<String> telNumber = new ArrayList<>();
	public ArrayList<String> getUserName() {
		return userName;
	}
	public void setUserName(ArrayList<String> userName) {
		this.userName = userName;
	}
	public ArrayList<String> getTelNumber() {
		return telNumber;
	}
	public void setTelNumber(ArrayList<String> telNumber) {
		this.telNumber = telNumber;
	}
	
	public void savePhoneNumber() {
		Scanner sc = new Scanner(System.in);
		String name = "";
		String number = "";
		
		System.out.println("중지하려면 -1을 입력하세요 :");
		System.out.println("이름을 입력하세요 : \t\n");
		name = sc.nextLine();
		System.out.println("전화번호를 입력하세요 :\t\n");
		number = sc.nextLine();
		userName.add(name);
		telNumber.add(number);
		
	}
	
	public void showInfo() {
		System.out.println("---------------------");
		for (int i = 0; i < userName.size(); i++) {
			System.out.println("[" + userName.get(i) + "] : \t");
			System.out.println(telNumber.get(i));
		}
		System.out.println("---------------------");
	}
	public static void main(String[] args) {
		
		InputPhoneNumber inputPhoneNumber =  new InputPhoneNumber();
		inputPhoneNumber.savePhoneNumber();
	}
}
